{
  "name": "Health Claim Submission Tests",
  "stop_on_failure": false,
  "test_cases": [
    {
      "name": "Submit Valid Health Claim",
      "description": "Test submitting a health claim with correct policy number",
      "steps": [
        {
          "name": "Enter Policy Number",
          "action": {
            "type": "enterText",
            "target": "policy_input",
            "value": "POL123456"
          },
          "variable_validation": {
            "policyNumber": "POL123456",
            "policyName": null
          },
          "wait_ms": 500
        },
        {
          "name": "Enter Amount",
          "action": {
            "type": "enterText",
            "target": "amount_input",
            "value": "1500"
          },
          "variable_validation": {
            "claimAmount": 1500.0
          },
          "wait_ms": 500
        },
        {
          "name": "Submit Form",
          "action": {
            "type": "tap",
            "target": "submit_button"
          },
          "wait_ms": 3000
        },
        {
          "name": "Verify Success",
          "action": {
            "type": "wait",
            "wait_ms": 1000
          },
          "variable_validation": {
            "submissionStatus": "SUCCESS",
            "isSubmitting": false
          }
        }
      ]
    }
  ]
}